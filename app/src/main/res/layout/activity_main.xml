<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity">


    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_centerInParent="true">
        <FrameLayout android:id="@+id/left_container"
                     android:layout_width="120dp"
                     android:background="@color/container_background"
                     android:layout_height="120dp">
            <com.nemesiss.dev.crossingcontainermovement.view.NumericSquare
                    android:id="@+id/moving_view"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    app:cardBackground="@drawable/round_ripple_purple"
                    app:textColor="@color/white"
                    android:elevation="4dp"
            />
        </FrameLayout>
        <!-- divider-->
        <View android:layout_width="8dp"
              android:layout_height="match_parent"/>
        <FrameLayout android:id="@+id/right_container"
                     android:padding="8dp"
                     android:layout_width="120dp"
                     android:background="@color/container_background"
                     android:layout_height="120dp"/>
    </LinearLayout>
</RelativeLayout>